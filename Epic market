<script>
// ===== CONFIG =====
const OPENAI_API_KEY = "YOUR_OPENAI_API_KEY";
let products = JSON.parse(localStorage.getItem("products")) || [];
let trendingProducts = [];
let users = JSON.parse(localStorage.getItem("users")) || [];
let currentUser = JSON.parse(localStorage.getItem("currentUser")) || null;

// ===== MODALS =====
function openModal(id){ document.getElementById(id).style.display="flex"; }
function closeModal(id){ document.getElementById(id).style.display="none"; }

// ===== USER LOGIN =====
function saveUsers(){ localStorage.setItem("users", JSON.stringify(users)); }
function signUp(){ const username=document.getElementById("username").value.trim();
const email=document.getElementById("email").value.trim(); const password=document.getElementById("password").value.trim();
const msg=document.getElementById("loginMessage"); if(!username||!email||!password){ msg.style.color="red"; msg.innerText="All fields required"; return; }
if(users.find(u=>u.email===email)){ msg.style.color="red"; msg.innerText="Email exists"; return; }
const user={username,email,password,wallet:0}; users.push(user); saveUsers(); msg.style.color="green"; msg.innerText="Sign up successful"; }
function login(){ const email=document.getElementById("email").value.trim();
const password=document.getElementById("password").value.trim(); const msg=document.getElementById("loginMessage");
const user=users.find(u=>u.email===email && u.password===password); if(user){ currentUser=user; localStorage.setItem("currentUser",JSON.stringify(currentUser));
msg.style.color="green"; msg.innerText=`Welcome ${user.username}`; closeModal('loginModal'); updateWalletDisplay(); } else{ msg.style.color="red"; msg.innerText="Invalid"; } }
function forgotPassword(){ const email=document.getElementById("email").value.trim(); const msg=document.getElementById("loginMessage");
const user=users.find(u=>u.email===email); if(user){ msg.style.color="green"; msg.innerText=`Password: ${user.password}`; } else{ msg.style.color="red"; msg.innerText="Email not found"; } }

// ===== GOOGLE LOGIN =====
function handleGoogleLogin(response){
  const jwt = parseJwt(response.credential); 
  const email = jwt.email; const username = jwt.name;
  let user = users.find(u => u.email === email);
  if(!user){ user={username,email,password:null,wallet:0}; users.push(user); saveUsers(); }
  currentUser=user; localStorage.setItem("currentUser",JSON.stringify(currentUser));
  closeModal('loginModal'); updateWalletDisplay(); alert(`Welcome ${currentUser.username} (Google Account)`); 
}
function parseJwt(token){ const base64Url=token.split('.')[1]; const base64=base64Url.replace(/-/g,'+').replace(/_/g,'/'); const jsonPayload=decodeURIComponent(atob(base64).split('').map(c=>'%' + ('00'+c.charCodeAt(0).toString(16)).slice(-2)).join('')); return JSON.parse(jsonPayload); }

// ===== WALLET, PAYMENTS, AI PRODUCTS, TRENDING, ADMIN =====
// ... same as previous full code ...
</script>
